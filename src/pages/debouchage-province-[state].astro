---
import { data, slugify } from "../data/locations";
import Layout from "../layouts/Layout.astro";
import LeadForm from "../components/LeadForm.astro";
import CallToAction from "../components/CallToAction.astro";

export async function getStaticPaths() {
  return data.map(({ State }) => ({
    params: { state: slugify(State) },
    props: { state: State },
  }));
}

const { state } = Astro.props;
const canonicalUrl = `/debouchage-province-${slugify(state)}/`;
const stateData = data.find((d) => d.State === state);

const title = `Débouchage Province ${state} en Urgence 24/7 - Plombier En Urgence`;
const description = `Service de débouchage urgent disponible 24h/7 dans la province ${state}. Intervention express en 30 minutes pour vos canalisations bouchées. Contactez-nous au 0472/80.80.80`;

// Dynamic schema generation based on state
const productSchema = {
  "@context": "http://schema.org",
  "@type": "Product",
  "brand": "Plombier en Urgence",
  "name": `Débouchage en ${state} en Urgence 24/7 - Express Débouchage`,
  "description": `Service de débouchage urgent disponible 24h/7 dans la province ${state}. Intervention express en 30 minutes pour vos canalisations bouchées. Contactez-nous au 0472/80.80.80`,
  "sku": "0472800001",
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": 9.9,
    "ratingCount": 5,
    "bestRating": 10,
    "worstRating": 1
  },
  "offers": {
    "@type": "AggregateOffer",
    "availability": "http://schema.org/InStock",
    "priceCurrency": "EUR",
    "lowPrice": 106,
    "offerCount": 90,
    "highPrice": 265
  }
};
---

<Layout
  title={title}
  description={description}
  location={state}
  canonicalUrl={canonicalUrl}
  schemaMarkup={productSchema}
>
  <section
    class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-600 text-white py-32"
  >
    <div class="absolute inset-0 opacity-10"></div>
    <div
      class="absolute inset-0 bg-gradient-to-t from-blue-900/50 to-transparent"
    >
    </div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <span
            class="inline-block px-4 py-1 rounded-full bg-blue-500/20 backdrop-blur-sm text-white mb-4"
          >
            Service disponible 24/7
          </span>
          <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight">
            Débouchage Province {state}
          </h1>
          <p class="text-xl mb-8 text-blue-100">
            Débouchage Province {state} en Urgence 24/7 - Express Débouchage
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="tel:+32472808080"
              class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-blue-50 transition duration-300 shadow-lg hover:shadow-xl flex items-center gap-2"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              0472/80.80.80
            </a>
            <a
              href="#devis"
              class="border-2 border-white/30 backdrop-blur-sm text-white px-8 py-4 rounded-xl font-bold hover:bg-white/10 transition duration-300 flex items-center gap-2"
            >
              <svg
                class="w-6 h-6"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"
                ></path>
              </svg>
              Devis gratuit
            </a>
          </div>
        </div>
        <div class="relative">
          <div
            class="absolute inset-0 bg-gradient-to-r from-blue-600/30 to-emerald-600/30 rounded-2xl blur-3xl"
          >
          </div>
          <div class="relative" id="devis">
            <LeadForm location={state} />
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-800 mb-4">
          Province de {state}
        </h2>
        <p class="text-xl text-gray-600">
          Découvrez la beauté et les caractéristiques de la province {state}
        </p>
      </div>
      <div class="flex justify-center items-center">
        <img 
          src="/state.jpg"
          alt={`Debouchage ${state} - Plombier En Urgence`}
          class="min-w-full h-auto max-h-[500px] rounded-2xl shadow-xl"
        />
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-12">
        <div class="prose max-w-none">
          <h2 class="text-3xl font-bold mb-6">
            Service de Débouchage Province {state}
          </h2>
          <p class="text-lg mb-4">
            Notre entreprise de débouchage est fière de servir l'ensemble de la <strong
              >Province {state}</strong
            >. Avec une équipe spécialisée répartie stratégiquement dans toute la province, 
            nous garantissons une intervention rapide et efficace pour tous vos problèmes de canalisations.
          </p>

          <h3 class="text-2xl font-bold mt-8 mb-4">
            Notre Expertise Provinciale
          </h3>
          <p>
            Nous comprenons les spécificités du débouchage en Province {state},
            des systèmes les plus anciens aux installations les plus modernes.
            Notre connaissance approfondie du territoire nous permet
            d'intervenir efficacement dans toutes les situations de blocage.
          </p>

          <div class="bg-blue-50 p-6 rounded-lg my-8">
            <h4 class="text-xl font-bold mb-4">
              Nos Services Province {state} :
            </h4>
            <ul class="space-y-2">
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                Intervention d'urgence 24/7
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                Curage et nettoyage complet
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                Diagnostic et détection de problèmes
              </li>
              <li class="flex items-center gap-2">
                <svg
                  class="w-5 h-5 text-blue-600"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"></path>
                </svg>
                Débouchage haute pression
              </li>
            </ul>
          </div>
        </div>

        <div class="space-y-8">
          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-bold mb-4">
              Couverture toute la province {state}
            </h3>
            <p class="text-gray-600 mb-4">
              Notre réseau de techniciens couvre l'intégralité de la province {
                state
              }, assurant une intervention rapide dans toutes les communes.
              Notre système de répartition nous permet d'être au plus proche de
              nos clients.
            </p>
            <div class="mt-4">
              <h4 class="font-semibold mb-2">Types d'Interventions :</h4>
              <ul class="space-y-2 text-gray-600">
                <li>• Résidentiel</li>
                <li>• Commercial</li>
                <li>• Industriel</li>
                <li>• Collectivités</li>
              </ul>
            </div>
          </div>

          <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-bold mb-4">Engagement Qualité</h3>
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold mb-2">Formation Continue</h4>
                <p class="text-gray-600">
                  Nos techniciens suivent régulièrement des formations pour rester
                  à la pointe des nouvelles technologies de débouchage et de
                  diagnostic des réseaux.
                </p>
              </div>
              <div>
                <h4 class="font-semibold mb-2">Équipement Professionnel</h4>
                <p class="text-gray-600">
                  Utilisation d'équipements de pointe pour garantir des interventions
                  précises et efficaces dans tous types de situations de blocage.
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <CallToAction />
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">
          Communes Desservies de la Province {state}
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Notre équipe intervient dans toutes les communes de la province pour
          assurer un service rapide et efficace de débouchage
        </p>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        {
          stateData.Cities.map((city) => (
            <a
              href={`/debouchage-${slugify(city.cityName)}/`}
              class="group bg-white p-6 rounded-xl shadow-lg hover:shadow-xl transition duration-300 border border-gray-100 hover:border-blue-200"
            >
              <h3 class="text-lg font-semibold text-gray-800 group-hover:text-blue-600 capitalize">
                Débouchage {city.cityName}
              </h3>
              <p class="text-sm text-gray-500 mt-2">Service 24/7</p>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <section class="py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div
        class="bg-gradient-to-br from-blue-900 to-blue-800 rounded-3xl overflow-hidden"
      >
        <div class="px-8 py-12 md:p-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
            Besoin d'un service de débouchage dans la Province {state} ?
          </h2>
          <p class="text-blue-100 text-lg mb-8">
            Notre équipe de professionnels est disponible 24/7 pour tous vos
            problèmes de canalisations. Contactez-nous pour un devis gratuit !
          </p>
          <div class="flex flex-wrap gap-4">
            <a
              href="tel:+32472808080"
              class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-blue-50 transition duration-300"
            >
              0472/80.80.80
            </a>
            <a
              href="#devis"
              class="bg-blue-700 text-white px-8 py-4 rounded-xl font-bold hover:bg-blue-600 transition duration-300"
            >
              Demander un devis
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>