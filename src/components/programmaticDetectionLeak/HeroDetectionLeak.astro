---
import LeadForm from '../LeadForm.astro';

const { locationName } = Astro.props;

const title = `Détection Fuites à ${locationName} - en urgence 24/7`;

const description = `La détection rapide et précise des fuites d'eau, de gaz ou de chauffage est essentielle pour préserver votre patrimoine immobilier à ${locationName}. Notre équipe de techniciens spécialisés intervient dans tout ${locationName} avec des équipements de pointe pour localiser avec précision l'origine des fuites, sans dégradation ni destruction de vos installations.`;

const phoneNumber = "0472/80.80.80";
const telLink = `tel:+32${phoneNumber.replace(/[/.]/g, '').substring(1)}`;
---

<section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-600 text-white py-32">
  <div class="absolute inset-0 opacity-10"></div>
  <div class="absolute inset-0 bg-gradient-to-t from-blue-900/50 to-transparent"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-block px-4 py-1 rounded-full bg-blue-500/20 backdrop-blur-sm text-white mb-4 text-sm font-medium">
          Experts Détection Fuites 24/7
        </span>

        <h1 class="text-4xl md:text-6xl font-bold mb-6 leading-tight font-montserrat">{title}</h1>
        <p class="text-xl mb-8 text-blue-100 leading-relaxed">{description}</p>
        <div class="flex flex-wrap gap-4">
          <a href={telLink} class="bg-white text-blue-600 px-8 py-4 rounded-xl font-bold hover:bg-blue-50 transition duration-300 shadow-lg hover:shadow-xl flex items-center gap-2 font-montserrat">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            {phoneNumber}
          </a>
          <a href="#devis" class="border-2 border-white/30 backdrop-blur-sm text-white px-8 py-4 rounded-xl font-bold hover:bg-white/10 transition duration-300 flex items-center gap-2 font-montserrat">
             <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path></svg>
            Devis gratuit
          </a>
        </div>
      </div>
      <div class="relative">
         <div class="absolute inset-0 bg-gradient-to-r from-blue-600/30 to-emerald-600/30 rounded-2xl blur-3xl opacity-50"></div>
         <div class="relative" id="devis">
           <LeadForm location={locationName} /> 
         </div>
       </div>
    </div>
  </div>
</section>