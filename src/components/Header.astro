---
import StateNavigation from '../components/StateNavigation.astro';
---

<header class="bg-white/80 backdrop-blur-sm shadow-lg sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 h-20">
    <div class="flex items-center justify-between h-full">
      <a href="/" class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-blue-800 bg-clip-text text-transparent">
        PlombierEnUrgence
      </a>

      <!-- Mobile menu button -->
      <button 
        id="mobile-menu-button" 
        class="md:hidden text-gray-700 hover:text-blue-600 transition duration-200"
        aria-label="Menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>

      <!-- Desktop menu -->
      <div class="hidden md:flex items-center gap-8">
        <div class="relative group">
          <button class="text-gray-700 hover:text-blue-600 transition duration-200 flex items-center gap-1">
            Provinces
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          <StateNavigation />
        </div>
        <a href="/nos-services/" class="text-gray-700 hover:text-blue-600 transition duration-200">Services</a>
        <a href="/contact/" class="text-gray-700 hover:text-blue-600 transition duration-200">Contact</a>
        <a href="tel:+32472808080" class="bg-gradient-to-r from-blue-600 to-blue-700 text-white px-6 py-3 rounded-xl hover:shadow-lg transition duration-300">
          0472/80.80.80
        </a>
      </div>
    </div>
  </nav>
</header>

<!-- Mobile menu overlay - Positioned fixed and outside the header -->
<div 
  id="mobile-menu" 
  class="fixed inset-0 bg-black/50 md:hidden hidden" 
  style="z-index: 100;"
>
  <!-- Mobile menu content -->
  <div 
    class="fixed right-0 top-0 h-full w-64 bg-white shadow-lg overflow-y-auto"
    style="z-index: 101;"
  >
    <div class="p-4">
      <button 
        id="close-menu" 
        class="absolute top-4 right-4 text-gray-500 hover:text-gray-700"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
      <div class="mt-8 space-y-4">
        <div class="space-y-2">
          <p class="font-semibold text-gray-700 px-2">Provinces</p>
          <div class="space-y-1">
            <a href="/plombiers-province-hainaut" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Plombier à Hainaut</a>
            <a href="/plombiers-province-liege" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Plombier à Liège</a>
            <a href="/plombiers-province-luxembourg" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Plombier à Luxembourg</a>
            <a href="/plombiers-province-namur" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Plombier à Namur</a>
            <a href="/plombiers-province-brabant-wallon" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Plombier à Brabant wallon</a>
          </div>
        </div>
        <hr>
        <a href="/nos-services#urgence" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Services</a>
        <a href="/contact" class="block px-2 py-2 text-gray-600 hover:text-blue-600">Contact</a>
        <a href="tel:+32472808080" class="block px-2 py-2 text-blue-600 font-semibold">0472/80.80.80</a>
      </div>
    </div>
  </div>
</div>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const closeMenuButton = document.getElementById('close-menu');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  });

  closeMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.add('hidden');
    document.body.style.overflow = '';
  });

  // Close menu when clicking outside
  mobileMenu?.addEventListener('click', (e) => {
    if (e.target === mobileMenu) {
      mobileMenu.classList.add('hidden');
      document.body.style.overflow = '';
    }
  });
</script>