---
import { data } from "../../data/locations";
import Layout from "../../layouts/Layout.astro";
import LeadForm from "../../components/LeadForm.astro";
import { generateSchema } from "../../utils/seo";

export async function getStaticPaths() {
  // 1. Générer tous les chemins possibles ville/section
  const paths = data.flatMap(province =>
    province.Cities.flatMap(city =>
      (city.sections || []).map(section => ({
        params: {
          city: city.slug,    // Slug de la ville parente
          section: section.slug // Slug de la section
        },
        props: {
          locationData: {
            sectionName: section.name,
            cityName: city.cityName,
            province: province.State,
            postalCode: section.codePostal || city.codePostal,
            fullPath: `${city.slug}/${section.slug}`
          }
        }
      }))
    )
  );

  // 2. Retourner les chemins générés
  return paths;
}

// Récupération des paramètres
const { city, section } = Astro.params;
const { locationData } = Astro.props;
const meta_title = `Plombier ${locationData.sectionName} agréé ⭐️ Service 24/7`;
const meta_description = `Plombier ${locationData.sectionName} agréé professionnel ⭐️ Intervention rapide 24/7, dépannage d'urgence, installation et réparation. Devis gratuit ☎️ 0472/80.80.80`;
const schemaMarkup = generateSchema(meta_title, meta_description, 29);
