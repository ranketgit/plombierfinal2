---
import Layout from '../layouts/Layout.astro';

const title = "Merci | Plombier Professionnel en Belgique";
const description = "Merci pour votre demande. Notre équipe vous contactera dans les plus brefs délais.";
---

<Layout title={title} description={description}>
  <section class="py-20">
    <div class="max-w-3xl mx-auto px-4 text-center">
      <h1 class="text-4xl font-bold mb-6">Merci pour votre demande</h1>
      <p class="text-xl text-gray-600 mb-8">
        Notre équipe vous contactera dans les plus brefs délais.
      </p>
      <a 
        href="/" 
        class="inline-block bg-blue-600 text-white px-8 py-4 rounded-xl font-bold hover:bg-blue-700 transition duration-300"
      >
        Retour à l'accueil
      </a>
    </div>
  </section>
</Layout> 