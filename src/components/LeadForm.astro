---
interface Props {
  location?: string;
}

const { location = "Belgique" } = Astro.props;
---

<form
  action="https://formsubmit.co/info@msbxl.be"
  method="POST"
  class="bg-white p-8 rounded-2xl shadow-lg relative z-10"
>
  <h3 class="text-2xl font-bold mb-6 text-blue-600">
    Demande de devis gratuit 🪠 {location} 👷‍♂️
  </h3>

  <!-- Honeypot to prevent spam -->
  <input type="text" name="_honey" style="display:none" />

  <!-- Success page -->
  <input type="hidden" name="_next" value="https://plombierenurgence.com/" />

  <div class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2" for="name">
        Nom complet
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-200 text-gray-900"
        placeholder="Votre nom complet"
      />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2" for="email">
        Adresse mail
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-200 text-gray-900"
        placeholder="votre@email.com"
      />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2" for="phone">
        Téléphone
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        required
        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-200 text-gray-900"
        placeholder="0472/80.80.80"
      />
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-2" for="message">
        Votre message
      </label>
      <textarea
        id="message"
        name="message"
        rows="4"
        required
        class="w-full px-4 py-3 rounded-xl border border-gray-200 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 transition duration-200 text-gray-900"
        placeholder=`Décrivez votre besoin pour un dépannage de plomberie ou de débouchage ${location}...`
      ></textarea>
    </div>

    <button
      type="submit"
      class="w-full bg-gradient-to-r from-blue-600 to-blue-700 text-white py-4 px-6 rounded-xl font-bold hover:from-blue-700 hover:to-blue-800 transition duration-300 shadow-lg hover:shadow-xl"
    >
      Envoyer la demande
    </button>
  </div>
</form>
